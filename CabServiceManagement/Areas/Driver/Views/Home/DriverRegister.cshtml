@model DriverViewModel

@{
    ViewData["Title"] = "DriverRegister";
}

<h1>DriverRegister</h1>

<h4>DriverViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DriverRegister" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LicenceNumber" class="control-label"></label>
                <input asp-for="LicenceNumber" class="form-control" >
                <span asp-validation-for="LicenceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CabNumber" class="control-label"></label>
                <input asp-for="CabNumber" class="form-control" />
                <span asp-validation-for="CabNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CabName" class="control-label"></label>
                <input asp-for="CabName" class="form-control" />
                <span asp-validation-for="CabName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <select asp-for="Model" asp-items="@Html.GetEnumSelectList<CarModel>()" class="form-control">
                    <option>--- Select Car Model ---</option>
                </select>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success d-grid mt-4" />
            </div>
            <div asp-validation-summary="All" class="text-danger">

            </div>
        </form>

    </div>
</div>

